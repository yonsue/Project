				});
	
				var toolbarOptions = [ [ 'bold', 'italic', 'underline', 'strike' ],
						[ 'link', 'image' ], [ {
							'list' : 'ordered'
						}, {
							'list' : 'bullet'
						} ], [ {
							'header' : [ 1, 2 ]
						} ] ];
	
				var quill = new Quill('#editor', {
					modules : {
						toolbar : toolbarOptions
					},
					theme : 'snow'
